@using Climb2C.Questionnaires.sql.Data;
@model List<Form>;

@{ Layout = null; }

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(to bottom right, #fefcff, #eaf6ff);
        background-image: url('https://transparenttextures.com/patterns/cubes.png');
        background-repeat: repeat;
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
    }

    .main-title {
        color: #8f00ff;
        font-weight: 800;
        margin-top: 40px;
        margin-bottom: 10px;
        text-align: center;
        font-size: 2.5rem;
    }

    .subtitle {
        color: #6c757d;
        text-align: center;
        margin-bottom: 50px;
        font-size: 1.1rem;
    }

    .form-card {
        background: #ffffff;
        border-radius: 20px;
        box-shadow: 0 6px 30px rgba(0, 0, 0, 0.15);
        padding: 25px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .form-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(143, 0, 255, 0.25);
    }

    .form-card h2 {
        font-size: 1.25rem;
        margin-bottom: 20px;
    }

    .form-card a.btn {
        background-color: #007bff;
        border: none;
        font-weight: 600;
        padding: 10px;
        border-radius: 10px;
        transition: background-color 0.3s ease;
    }

    .form-card a.btn:hover {
        background-color: #0056b3;
    }

    .logout-btn {
        position: absolute;
        top: 25px;
        right: 30px;
    }
</style>

<div class="container py-5">
    <a href="Connection/Index?Id" class="btn btn-outline-secondary logout-btn">Se Déconnecter</a>

    <h1 class="main-title">Bienvenue sur les questions</h1>
    <p class="subtitle">Sélectionnez un formulaire à remplir parmi la liste ci-dessous</p>

    <div class="row justify-content-center g-4 pt-5 mt-5">
        @foreach (var form in Model)
        {
            <div class="col-sm-10 col-md-6 col-lg-4 d-flex justify-content-center">
                <div class="form-card w-100">
                    <img src="/images/formulaire.svg" alt="Form Illustration" class="card-img-top">
                    <h2>@form.Nom</h2>
                    <a href="Forms/Index?Id=@form.ID_form" class="btn btn-primary w-100">Commencer le formulaire</a>
                </div>
            </div>
        }
    </div>
</div>
