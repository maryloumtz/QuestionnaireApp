@using Climb2C.Questionnaires.sql.Data;

@{Layout = null; }

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    html, body, .full-height {
        height: 100%;
    }
    .photo-side {
        background: url('/images/connection.jpg') center center/cover no-repeat;
        min-height: 100vh;
        border-top-right-radius: 40px;
        border-bottom-right-radius: 40px;
    }
</style>

<div class="container-fluid full-height" style="background-color: #CED3F2;">
    <div class="row h-100">
        <div class="col-8 photo-side d-none d-md-block">
            <!-- photo  -->
        </div>

        <div class="col-4 d-flex align-items-center justify-content-center">
            <form method="post" action="/Inscription/Index" class="w-100" style="max-width: 350px;">

                <h1 class="mb-3 text-center fw-bold">Votre passerelle vers l'expérience</h1>
                <p class="mb-4 text-center text-muted">Commencez dès maintenant en créant votre compte</p>

                <input type="text" name="lastname" class="form-control mb-3" placeholder="Prénom" required>
                <input type="text" name="name" class="form-control mb-3" placeholder="Nom" required>
                <input type="email" name="mail" class="form-control mb-3" placeholder="Email" required>
                <input type="password" name="password" class="form-control mb-3" placeholder="Mot de passe" required>
                <input type="password" name="passwordconfirm" class="form-control mb-3" placeholder="Confirmer votre mot de passe" required>
                <button type="submit" class="btn btn-primary w-100 mb-2">S'inscire</button>
                <a href="/Connection/Index" class="btn btn-link w-100">Déjà un compte ? Se connecter</a>
                
            </form>
        </div>
    </div>
</div>